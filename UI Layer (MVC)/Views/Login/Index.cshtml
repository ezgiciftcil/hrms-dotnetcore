@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HRMSWeb | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/css/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Index", "Login")"><b>HRMS</b>Web</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">
                    Please select your membership type to login.
                </p>

                <div class="social-auth-links text-center mb-3">
                    <a href="@Url.Action("JobSeekerLogin", "Login")" class="btn btn-block btn-info">
                        <i class="fas fa-search mr-2"></i> Login as Job Seeker
                    </a>
                    <a href="@Url.Action("EmployerLogin", "Login")" class="btn btn-block btn-dark">
                        <i class="far fa-building mr-2"></i> Login as Company
                    </a>
                </div>
                <!-- /.social-auth-links -->


                <div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <p class="mb-0">
                        <a href="@Url.Action("Index", "Register")" class="text-center">Create a new <b>membership</b> today!</a>
                    </p>
                </div>
                </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
</body>
</html>

@model UI_Layer__MVC_.Models.Education
@{
    ViewData["Title"] = "Add New Education";
    Layout = "~/Views/Shared/JobSeekerLayout.cshtml";
}

<form action="@Url.Action("AddNewEducation", "Educations")" method="post">
    <div class="input-group mb-3">
        <div class="col-md-6 offset-md-3">
            <label>University</label>
            <input asp-for="UniversityName" type="text" class="form-control" placeholder="University Name">
            <label>Department</label>
            <input asp-for="DepartmentName" type="text" class="form-control" placeholder="Department Name">
            <label>GPA</label>
            <input asp-for="GPA" type="number" step="0.01" class="form-control" placeholder="GPA">
            <label>Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" placeholder="Start Date">
            <label>Finish Date</label>
            <input asp-for="FinishDate" type="date" class="form-control" placeholder="Finish Date">
            <input type="hidden" asp-for="ResumeId" value=@Model.ResumeId>
        </div>
    </div>
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <div class="col align-self-center">
                <button type="submit" class="btn btn-info btn-block">Add New Education</button>
            </div>
        </div>
    </div>
</form>